#navView {
  background-color:  white;
  width: 100%;
  top:0;
  left: 0;
  right: 0; 
  position: fixed;
  z-index: 800;
}
#backBtn {
  width: 30px;
  height: 30px;
  position: absolute;
  border-radius: 5px;
  background-color:rgba(255, 255, 255, 0);
  left: 15px;
  padding: 0px;
  z-index: 900;
}
#navTitle {
  position: absolute;
  font: 20px;
  color: rgb(255,64,129);
  margin: auto;
  left: 0;
  right: 0;
  text-align: center;
}
#backImg {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 0px;
  left: 0px;
  font-size: 26px;
  color: rgb(255,64,129);
}

.selected-date { 
  text-align: center; 
  margin: 30rpx; 
} 
 
.icon-container { 
  display: flex; 
  flex-direction: column; 
  justify-content: center; 
  align-items: center; 
} 
 
.picker-icon { 
  width: 50rpx; 
  height: 50rpx; 
} 
.page-body{ 
  margin-top: 200rpx; 
}

.btn-area{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #FFF;
  padding: 24rpx;
  box-sizing: border-box;
}
.btn-area button{
  border: none;
  background: #FF4081;
  color: #FFF;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  z-index: 999;
}