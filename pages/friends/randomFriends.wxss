/* pages/friends/randomFriends.wxss */

#mainView {
  height: 100vh;
  width: 100%;
}
#backBtn {
  width: 30px;
  height: 30px;
  position: absolute;
  border-radius: 5px;
  background-color:rgba(255, 255, 255, 0);
  left: 15px;
  padding: 0px;
  z-index: 900;
}
#backImg {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 0px;
  left: 0px;
  font-size: 26px;
  color: rgb(255,64,129);
}
#randomBtn {
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0; 
  bottom: 20px; 
  position: absolute;
  width: 60px;
  height: 60px;
  background-color: white;
  border-radius: 30px;
  z-index: 1000;
}
#buttonImg {
  height: 26px;
  width: 26px;
  margin: 17px;
}

#actionBtn {
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0; 
  bottom: 100px; 
  position: absolute;
  width: 120px;
  height: 34px;
  padding: 0px;
  font: 20px;
  line-height:34px;
  text-align:center;
  vertical-align: middle;
  color: white;
  border-radius: 17px;
  background-color: rgb(255,64,129);
  z-index: 1000;
}