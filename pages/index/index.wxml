<!--index.wxml-->
<view id='mainView'>
  <map id="myMap" markers="{{markers}}" style="width:100%;height:100vh;z-index:700" longitude="{{longitude}}" latitude="{{latitude}}" scale='18' wx:if="{{hasMarker&&hasAvatar}}">
  </map>
  <button id='shareBtn' style="top:{{shareBtnTop}}px"></button>
  <button id='buttonLeft'></button>
  <button id='buttonRight'></button>
  <view id='avaterList'>
    <view id='avaterLeft'></view>
    <view id='avaterMid'></view>
    <view id='avaterRight'></view>
  </view>
  <button id='actionBtn'>找人玩</button>
</view>
