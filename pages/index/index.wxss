#authorBtn {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #000;
  opacity: 0.8;
  width:100%;
  height:100vh;
  z-index: 50;
}

#authorText {
  color: #fff;
  background-color: #f00;
  border-radius: 10rpx;
  margin-top: 40vh;
}


#mainView {
  height: 100vh;
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: white;
}
#shareBtn {
  width: 30px;
  height: 30px;
  position: absolute;
  border-radius: 5px;
  background-color: white;
  left: 15px;
  z-index: 900;
}
#buttonRight {
  right: 10px;
  bottom: 20px;
