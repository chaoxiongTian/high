#avaterList {
  left:100px;
  right: 100px;
  bottom: 20px;
  position: absolute;
  height: 60px;
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  z-index: 900;
  padding: 0;
}

#avaterLeft {
