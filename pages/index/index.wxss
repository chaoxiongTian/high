/**index.wxss**/
#authorBtn {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #000;
  opacity: 0.8;
  width:100%;
  height:100vh;
  z-index: 50;
}

#authorText {
  color: #fff;
  background-color: #f00;
  border-radius: 10rpx;
  margin-top: 40vh;
}


#mainView {
  height: 100vh;
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: white;
}
#shareBtn {
  width: 32px;
  height: 32px;
  position: absolute;
  border-radius: 5px;
  background-color:rgba(255, 255, 255, 0);
  left: 15px;
  padding: 0px;
  z-index: 900;
}
#shareImg {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 2px;
  left: 2px;
  font-size: 30px;
  color: rgb(255,64,129);
}
#buttonRight {
  right: 10px;
  bottom: 20px;
  position: absolute;
  width: 60px;
  height: 60px;
  line-height: 20px;
  border-radius: 30px;
  border-width: 2px;
  border-color: white;
  background-color: white;
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  z-index: 900;
}
#buttonLeft {
  left: 10px;
  bottom: 20px;
  position: absolute;
  width: 60px;
  height: 60px;
  line-height: 20px;
  border-radius: 30px;
  border-color: white;
  border-width: 2px;
  background-color: white;
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  z-index: 900;
}
.buttonImg {
  height: 26px;
  width: 26px;
  margin: 17px auto;
}

#avaterList {
  left:100px;
  right: 100px;
  bottom: 20px;
  position: absolute;
  height: 60px;
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  z-index: 900;
  padding: 0;
}

#avaterLeft {
  margin-right: 10px;
  margin-bottom: 11px;
  background-color: white;
  height: 38px;
  width: 38px;
  border-radius: 19px;
  display: inline-block;
}

#avaterMid {
  margin:0 auto;
  width: 60px;
  height: 60px;
  background-color: white;
  border-radius: 30px;
  display: inline-block;
  
}
#friendImg {
  font-size: 24px;
  height: 24px;
  width: 60px;
  text-align: center;
  margin:18px auto;
}

#avaterRight {
  margin-left: 10px;
  margin-bottom: 11px;
  background-color: white;
  height: 38px;
  width: 38px;
  border-radius: 19px;
  display: inline-block;
}

#actionBtn {
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0; 
  bottom: 100px; 
  position: absolute;
  width: 120px;
  height: 34px;
  padding: 0px;
  font: 20px;
  line-height:34px;
  text-align:center;
  vertical-align: middle;
  color: white;
  border-radius: 17px;
  background-color: rgb(255,64,129);
  z-index: 900;
}

#friendView {
  height: 200px;
  width: 100%;
  position: fixed;
  border-top-right-radius: 50%;
  border-top-left-radius: 50%;
  bottom: 0;
  background-image:linear-gradient(to bottom, rgba(255,255,255,0.8),rgba(255,255,255,1));
  z-index: 1000;
}
#closeFriends{
  width: 40px;
  height: 40px;
  font-size: 25px;
  color:  rgb(255,64,129);
  position: absolute;
  right: 20px;
  top: 10px;
  text-align: right;
}
#friendTitle {
  color:  rgb(255,64,129);
  font-size: 25px;
  width: 100%;
  text-align: center;
  top: 25px;
  position: absolute;
}
#scrollView {
  width: 80%;
  left: 10%;
  right: 10%;
  margin-right: 10%;
  margin-left: 10%;
  margin-top: 10vh;
  height: 15vh;
  bottom: 0;
}
.scroll-y {
  display: flex; 
  align-items: center;
}

.avatorView{
  width: 80px;
  height: 80px;
  margin: 5px;
}
.avator{
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 5px;
  margin-bottom: 0px;
  width: 50px;
  height: 50px;
  left: 0;
  right: 0;
  top: 0;
  border-radius: 50%;
}
.nickName{
  margin-left: 0px;
  margin-right: 0px;
  width: 80px;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 12px;
  text-align: center;
  display: block;
}