page{
  height: 100%;
  width: 100%;
}
#mainView {
  height: 100%;
  width: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color:rgba(196, 196, 196, 0.1);
}
.top_bar{
  margin-top:30rpx;
}
.back_icon {
  width:30rpx;
  height:30rpx;
  margin-left:40rpx;
  margin-top:40rpx;
}
#inviteCard {
  width: 700rpx;
  height: 600rpx;
  margin: auto;
  margin-top: 30rpx;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
  background: white;
}
#page_title{
  margin-left: 220rpx;
  margin-top: 35rpx;
  font-size: 30rpx;
}
#title{
  margin-left: 16px;
  line-height: 25px;
  padding-top: 20px;
  font-size: 20px;
  text-align: center;
}
#time_text{
  margin-top:8px;
  margin-left:16px;
  font-size: 14px;
  text-align: center;
}
#position_name{
  margin-top:10px;
  margin-left:16px;
  font-size: 14px;
  text-align: center;
}
#position_detail{
  margin-top:6px;
  margin-left:16px;
  font-size: 10px;
  color: rgba(177, 177, 177, 0.8);
  text-align: center;
}
.round_btn{
  position: relative;
  margin: 20rpx;
  color: white;
  background-color: rgb(255,64,129);
  border-radius: 30px;
  border-color: rgb(255,64,129);
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2);
}

.inner_map {
  flex: 1.5;
  width: 100%;
}

.map_cover {
  background: linear-gradient(rgba(255,255,255,1), rgba(255,255,255,0));
    /* background: rgba(39, 130, 215, 0.7); */
}

#find_it {
  margin-top: 20rpx;
}

#edit_metting{
  margin-top: 20rpx;
  background-color: white;
  color: black;
  border-color: white;
}

.people_num{
  width: 100%;
  display: flex;
  justify-content: center;/*水平居中*/
  margin-top: 30rpx;
  position: relative;
  font-size: 24rpx;
}

.avatar_img {
  width: 80rpx;
  height: 80rpx;
}

